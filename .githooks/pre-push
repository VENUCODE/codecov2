#!/bin/bash
#
# Pre-push Git hook
# Runs tests before allowing push to remote repository
#
# This hook prevents pushing code that fails tests locally.
# Note: This can be bypassed with --no-verify flag.
# CI/CD branch protection provides the real enforcement layer.

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}Running pre-push hook: Testing before push...${NC}"
echo ""

# Check if pytest is available
if ! command -v pytest &> /dev/null; then
    echo -e "${RED}ERROR: pytest is not installed or not in PATH${NC}"
    echo "Please install dependencies: pip install -r requirements.txt"
    exit 1
fi

# Check if virtual environment is activated (optional but recommended)
if [ -z "$VIRTUAL_ENV" ] && [ ! -f "venv/bin/activate" ] && [ ! -f ".venv/bin/activate" ]; then
    echo -e "${YELLOW}WARNING: No virtual environment detected. Consider using a venv.${NC}"
fi

# Coverage threshold (percentage)
COVERAGE_THRESHOLD=75

# Run tests with coverage check
echo "Running pytest with coverage check (minimum ${COVERAGE_THRESHOLD}%)..."
if pytest --cov=app --cov-report=term --cov-fail-under=${COVERAGE_THRESHOLD}; then
    echo ""
    echo -e "${GREEN}✓ All tests passed and coverage meets threshold (≥${COVERAGE_THRESHOLD}%)!${NC}"
    echo -e "${GREEN}Proceeding with push...${NC}"
    exit 0
else
    echo ""
    echo -e "${RED}✗ Push aborted!${NC}"
    echo ""
    echo "Reason: Either tests failed OR coverage is below ${COVERAGE_THRESHOLD}%"
    echo ""
    echo "Please:"
    echo "  1. Fix any failing tests"
    echo "  2. Ensure test coverage is at least ${COVERAGE_THRESHOLD}%"
    echo ""
    echo "You can bypass this hook with: git push --no-verify"
    echo "However, CI/CD will still block merges if tests fail or coverage is insufficient."
    exit 1
fi

